<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!--Sand-Concrete-->
    <TerrainAffordanceDef>
        <defName>AffordanceConcreteSand</defName>
        <label>soft sand</label>
        <order>4000</order>
    </TerrainAffordanceDef>

    <ResearchTabDef>
		<defName>Sand</defName>
		<label>Sand</label>
	</ResearchTabDef>

    <ResearchProjectDef>
        <defName>ConcreteSandResearch</defName>
        <label>concrete sand</label>
        <description>Polymerize sand into a form of concrete, to lock the sand in place and keep it from dirtying other surfaces.</description>

        <baseCost>500</baseCost>
        <techLevel>Industrial</techLevel>
        <tab>Sand</tab>
        <researchViewX>0</researchViewX>
        <researchViewY>0</researchViewY>
    </ResearchProjectDef>

    <TerrainDef>
        <defName>ConcreteSand</defName>
        <label>concrete sand</label>
        <description>Polymerized concrete made from sand. It locks the sand in place, to keep it from dirtying other surfaces, but is ugly, slow to produce, and can't support much weight.</description>

        <texturePath>Terrain/Surfaces/Concrete</texturePath>
        <color>(255, 240, 200)</color>
        <edgeType>Hard</edgeType>
        <renderPrecedence>200</renderPrecedence>

        <terrainAffordanceNeeded>AffordanceConcreteSand</terrainAffordanceNeeded>
        <affordances>
            <li>Light</li>
        </affordances>
        <layerable>true</layerable>
        <designationCategory>Floors</designationCategory>
        <fertility>0</fertility>
        <constructEffect>ConstructDirt</constructEffect>
        <acceptTerrainSourceFilth>True</acceptTerrainSourceFilth>
        <statBases>
            <Beauty>-2</Beauty>
            <WorkToBuild>2000</WorkToBuild>
            <Flammability>0.1</Flammability>
        </statBases>
        <researchPrerequisites>
            <li>ConcreteSandResearch</li>
        </researchPrerequisites>
    </TerrainDef>



    <!--Sand Support Tiles-->
    <TerrainDef Name="SandSupportTileBase" Abstract="True">
        <texturePath>Terrain/Surfaces/GenericFloorTile</texturePath>
        <edgeType>Hard</edgeType>
        <renderPrecedence>200</renderPrecedence>

        <layerable>true</layerable>
        <designationCategory>Structure</designationCategory>
        <fertility>0</fertility>
        <constructEffect>ConstructMetal</constructEffect>
        <acceptTerrainSourceFilth>True</acceptTerrainSourceFilth>
    </TerrainDef>


    <ResearchProjectDef>
        <defName>SandSupportTilesResearch</defName>
        <label>sand support tiles</label>
        <description>Special tiles placed on top of sand, to support heavier structures.</description>

        <baseCost>1000</baseCost>
        <prerequisites>
            <li>ConcreteSandResearch</li>
        </prerequisites>
        <techLevel>Industrial</techLevel>
        <tab>Sand</tab>
        <researchViewX>0</researchViewX>
        <researchViewY>2</researchViewY>
    </ResearchProjectDef>

    <TerrainAffordanceDef>
        <defName>AffordanceSandSupportTile</defName>
        <label>sand</label>
        <order>4100</order>
    </TerrainAffordanceDef>

    <TerrainDef ParentName="SandSupportTileBase">
        <defName>SandSupportTile</defName>
        <label>sand-support tile</label>
        <description>Special tiles placed on top of sand, to support heavier structures.</description>

        <color>(80, 80, 80)</color>

        <terrainAffordanceNeeded>AffordanceSandSupportTile</terrainAffordanceNeeded>
        <affordances>
            <li>Light</li>
            <li>Medium</li>
            <li>Heavy</li>
        </affordances>
        <statBases>
            <Beauty>-1</Beauty>
            <WorkToBuild>1000</WorkToBuild>
        </statBases>
        <costList>
            <Steel>8</Steel>
        </costList>
        <researchPrerequisites>
            <li>SandSupportTilesResearch</li>
        </researchPrerequisites>
    </TerrainDef>


    <ResearchProjectDef>
        <defName>SoftSandSupportTilesResearch</defName>
        <label>soft-sand-support tiles</label>
        <description>Special tiles placed on top of soft sand, to support heavier structures.</description>

        <baseCost>1500</baseCost>
        <prerequisites>
            <li>SandSupportTilesResearch</li>
        </prerequisites>
        <techLevel>Industrial</techLevel>
        <tab>Sand</tab>
        <researchViewX>1</researchViewX>
        <researchViewY>2</researchViewY>
    </ResearchProjectDef>

    <TerrainAffordanceDef>
        <defName>AffordanceSoftSandSupportTile</defName>
        <label>sand</label>
        <order>4100</order>
    </TerrainAffordanceDef>

    <TerrainDef ParentName="SandSupportTileBase">
        <defName>SoftSandSupportTile</defName>
        <label>soft-sand-support tile</label>
        <description>Special tiles placed on top of soft sand, to support heavier structures.</description>

        <color>(140, 140, 140)</color>

        <terrainAffordanceNeeded>AffordanceSoftSandSupportTile</terrainAffordanceNeeded>
        <affordances>
            <li>Light</li>
            <li>Medium</li>
        </affordances>
        <statBases>
            <Beauty>-1</Beauty>
            <WorkToBuild>1500</WorkToBuild>
        </statBases>
        <costList>
            <Steel>12</Steel>
        </costList>
        <researchPrerequisites>
            <li>SoftSandSupportTilesResearch</li>
        </researchPrerequisites>
    </TerrainDef>
</Defs>